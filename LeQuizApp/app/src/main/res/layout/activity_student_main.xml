<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentMainActivity"
    android:layout_marginHorizontal="20dp"
    android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblStudent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="LOBBY"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/lblAccessCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input your access code below."
            android:fontFamily="sans-serif-medium"
            />

        <EditText
            android:id="@+id/txtAccessCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:ems="10"
            android:hint="ACCESS CODE"
            />


        <Button
            android:id="@+id/btnJoinQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Quiz"
            android:background="@drawable/custom_button"
            android:textColor="#ffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
           android:layout_marginTop="10dp"
            />

    </LinearLayout>













</RelativeLayout>
