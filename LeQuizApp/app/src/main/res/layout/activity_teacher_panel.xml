<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherPanelActivity">


    <RelativeLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/txtvw_menu_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickCategory"
            android:text="MANAGE CATEGORY"
            android:layout_marginTop="50dp"/>

        <Button
        android:id="@+id/btnQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickQuizes"
        android:text="MANAGE QUIZ"
        android:layout_below="@+id/btnCategory"/>


        <Button
            android:id="@+id/btnStudentQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="clickStudentQuiz"
            android:text="STUDENT QUIZ"
            android:layout_below="@+id/btnQuiz"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
