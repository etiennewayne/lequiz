<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/card_bg"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/item_lblQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUESTION:"
        android:textSize="15sp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/item_questionContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textStyle="italic"
        android:paddingLeft="2dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/item_lblQuestion"
        android:text="Question Content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/item_questionContent"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <Button
            android:id="@+id/btn_question_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/btn_question_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DELETE"/>

    </LinearLayout>


</RelativeLayout>
