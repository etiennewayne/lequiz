<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/card_bg"
    android:layout_margin="10dp">



    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/lblRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROOM"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACCESS CODE"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>


    <TextView
        android:id="@+id/lblquiztitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUIZ TITLE"
        android:layout_marginTop="5dp"
        android:layout_below="@id/container1"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lblcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CATEGORY"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lblquiztitle"
        android:layout_weight="1"
        android:textSize="15sp"
        android:textStyle="bold"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lblcategory"
        android:layout_marginTop="10dp"
        android:padding="15dp">

        <Button
            android:id="@+id/btn_student_quizzes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STUDENT QUIZZES"
            android:layout_weight="1"
            />


    </LinearLayout>


</RelativeLayout>
