<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:background="@drawable/card_bg"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/item_myquiz_quiztitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUIZ TITLE"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_myquiz_accesscode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACCESS CODE: "
        android:layout_below="@+id/item_myquiz_quiztitle"
        android:textSize="15sp"
        android:textStyle="bold"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/item_myquiz_accesscode"
        android:layout_height="wrap_content"
        android:id="@+id/layoutCourseTitle"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_myquiz_lblcoursetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COURSE TITLE: "
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/item_myquiz_txtcoursetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WEB APP"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layoutTotalScore"
        android:layout_below="@+id/layoutCourseTitle"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_myquiz_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL SCORE: "
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/item_myquiz_viewscore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layoutTotalScore"
        android:layout_height="wrap_content"
        android:id="@+id/layoutQuizTaken"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_myquiz_lblquizdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUIZ TAKEN: "
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/item_myquiz_txtquizdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2020/12/01 11:30 AM"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layoutQuizTaken"
        android:layout_height="wrap_content"
        android:id="@+id/layoutTotalPoints"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_myquiz_lbltotalpoints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL POINTS: "
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"/>



        <TextView
            android:id="@+id/item_myquiz_txttotalpointse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="40"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="15sp"
            android:textStyle="bold"/>

    </LinearLayout>








</RelativeLayout>
